@model ButtonViewModel

<a class="mdc-button @Model.CustomClass @Model.GetExtraClass() @Model.GetDense()"
   href="@Model.Action">
    @if (Model.Icon?.Variant == IconVariant.Leading)
    {
        <i class="material-icons mdc-button__icon" aria-hidden="true">@Model.Icon?.Icon</i>
    }
    <span class="mdc-button__label">@Model.Label</span>
    @if (Model.Icon?.Variant == IconVariant.Trailing)
    {
        <i class="material-icons mdc-button__icon" aria-hidden="true">@Model.Icon?.Icon</i>
    }
</a>